# --------------------------------------------------------------------------------------------------------------------
# media player
# --------------------------------------------------------------------------------------------------------------------

plugin.tx_dlf_mediaplayer < tt_content.list.20.dlf_mediaplayer
plugin.tx_dlf_mediaplayer {
    settings {
	    elementId = tx-dlf-media

        playerTranslations {
            baseFile = EXT:dlf/Resources/Private/Language/locallang_media.xlf
        }

        shareButtons {
            0 {
                type = material
                icon = email
                titleTranslationKey = share.email.tooltip
                hrefTemplate = mailto:?body={url}%0A%0A
            }

            1 {
                type = material
                icon = qr_code
                titleTranslationKey = share.qr_code.tooltip
                hrefTemplate = dlf:qr_code
            }

            2 {
                type = image
                src = EXT:slub_digitalcollections/Resources/Public/Images/mastodon-logo-purple.svg
                titleTranslationKey = share.mastodon.tooltip
                hrefTemplate = dlf:mastodon_share
            }
        }

        screenshotCaptions {
            0 {
                h = left
                v = bottom
                text = {host}
            }

            1 {
                h = right
                v = bottom
                text = {title}
            }
        }

        constants {
            screenshotFilenameTemplate = screenshot_{title}_h{hh}m{mm}s{ss}f{ff}
            seekStep = 11
            showPoster = 0
        }

        equalizer {
            enabled = 1

            default = 3-band

            presets {
                3-band {
                    group = graphic
                    mode = band-iso
                    label = 3-Band
                    octaveStep = 3.32
                }

                10-band {
                    group = graphic
                    mode = band-iso
                    label = 10-Band
                    octaveStep = 1
                }

                riaa {
                    group = riaa
                    mode = riaa
                    label = RIAA
                    params {
                        trebleCut = 75
                        baseBoost = 318
                        baseBoostRolloff = 3180
                    }
                }

                riaa-iec {
                    group = riaa
                    mode = riaa
                    label = Enhanced RIAA / IEC
                    params {
                        trebleCut = 75
                        baseBoost = 318
                        baseBoostRolloff = 3180
                        deepBaseRolloff = 7950
                    }
                }
            }
        }
    }
}

